  }
};



#include &lt;stdexcept&gt;
  
bool perform_dealloc(void *);
  
void operator delete(void *ptr) noexcept(false) {
  if (perform_dealloc(ptr)) {
    throw std::logic_error("Something bad");
  }
}
</code></pre>
"""

