import re


ERR1 = "The numerical value of a character shall not be used"
INT_TYPES = ["int", "int8_t", "uint8_t", "int16_t",
             "uint16_t", "int32_t", "uint32_t", "int64_t", "uint64_t"]
UNUSABLE_OPS = ["&&", "||", "!", "++", "--", "+", "-", "*", "/", "%"]
COMPARISON_OPS = ["==", "!=", "<", ">", "<=", ">="]


