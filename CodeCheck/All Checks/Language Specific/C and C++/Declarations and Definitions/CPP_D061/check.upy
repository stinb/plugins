import re


ERR1 = 'Constructor does not initialize virtual base class "%1"'
ERR2 = 'Constructor does not initialize direct non-virtual base class "%1"'
ERR3 = 'Constructor does not initialize data member "%1"'


def ids():
    return ('A12-1-1', 'CPP_D061')


